<style>
  .custom-button {
    margin-top: 20px;
    width: fit-content;
  }
</style>

<div class="row">
  <% @planets.each do |planet| %>
    <div class="col-lg-3 col-md-4 col-sm-6 col-12">
      <div class="card mb-2">
        <%= link_to planet_path(planet) do  %>
          <div class="card-img-top" style="width: 100%; height: 350px;">
            <%= image_tag planet.photo, style: "object-fit: cover; width: 100%; height: 100%;" %>
          </div>
        <% end %>
        <div class="card-body">
          <span class="badge bg-primary mb-2"><%= planet.price %>$</span>
          <h5 class="card-title"><%= planet.name %></h5>
        </div>
      </div>
    </div>
  <% end %>
  <%= link_to "Add a new Planet", new_planet_path, class: 'btn btn-primary custom-button text-center'%>
</div>
