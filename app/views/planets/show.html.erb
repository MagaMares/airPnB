<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1><%= @planet.name %></h1>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th scope="row">Address</th>
            <td><%= @planet.address %></td>
          </tr>
          <tr>
            <th scope="row">Description</th>
            <td><%= @planet.description %></td>
          </tr>
          <tr>
            <th scope="row">Type</th>
            <td><%= @planet.planet_type %></td>
          </tr>
          <tr>
            <th scope="row">Price</th>
            <td><%= @planet.price %></td>
          </tr>
        </tbody>
      </table>
      <div class="planet-photo">
        <%= cl_image_tag @planet.photo.key, width: 400, height: 300, crop: :scale %>
      </div>
    </div>


    <div data-controller="toggle" class="mt-5">
      <button data-action="click->toggle#fire" class="btn btn-outline-primary">Book This Planet</button>
      <div data-toggle-target="togglableElement" class="d-none">
        <p><%= simple_form_for [@planet, @booking] do |f| %>
          <%= f.input :rental_start, input_html: {data: { controller: "datepicker" } }, as: :string %>
          <%= f.input :rental_end, input_html: {data: { controller: "datepicker" } }, as: :string %>
          <%= f.submit "Submit booking", class: "btn btn-primary" %>
        <% end %></p>
      </div>
    </div>
  </div>

</div>
