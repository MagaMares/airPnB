<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1><%= @planet.name %></h1>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th scope="row">Address</th>
            <td><%= @planet.address %></td>
          </tr>
          <tr>
            <th scope="row">Description</th>
            <td><%= @planet.description %></td>
          </tr>
          <tr>
            <th scope="row">Type</th>
            <td><%= @planet.planet_type %></td>
          </tr>
          <tr>
            <th scope="row">Price</th>
            <td><%= @planet.price %></td>
          </tr>
        </tbody>
      </table>
      <div class="planet-photo">
        <%= (image_tag @planet.photo, width: 400, height: 300, crop: :scale) %>
      </div>
    </div>
      <%= link_to "Book this planet", new_planet_booking_path(@planet), class: 'btn btn-primary' %>
    </div>
</div>
